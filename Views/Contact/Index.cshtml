@model IEnumerable<MvcAEI.Models.Contact>
@{
    ViewData["Title"] = "Les Contacts";
}

<div class="backParagrapheIndex" style="margin-bottom: 7em;">

    <div class="titrePageActualites" style="color:#0C2764;">
        <h1 class="mb-4" style="color:#0C2764; text-align:center; font-weight:bold;">Contacts</h1>
        <hr class="hrNoirTitreActualités">
    </div>
    <div class="px-5">
        <div class="row">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <div style="margin-bottom:3em;">
                        <div style="background-color:white; border-radius:10px; padding-left:2vw">
                            <p style="font-size: 1.5em; color:#0C2764; margin-bottom:0;">Nom : @Html.DisplayFor(modelItem => item.Nom)</p>
                            <p style="font-size: 1em; color:#258cfb;">Objet : @Html.DisplayFor(modelItem => item.Objet)</p>
                            <p style="text-align: justify; white-space: pre-wrap;">Date : @Html.DisplayFor(modelItem => item.Date)</p>
                            <div style="margin: auto;">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mb-1 ml-1 mr-1">Voir plus</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>