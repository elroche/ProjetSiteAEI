@model MvcAEI.Models.Contact

@{
    ViewData["Title"] = "Formulaire de contact";
}
<div class="backContact">
    <div class="titreContact">
        <h2><span style="color:white">Nous </span>contacter</h2>
        <hr class="hrBlanc">
    </div>
    <div class="formulaireContact">
        <form asp-action="Create">
            <fieldset class="fieldset-style p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row d-flex justify-content-center mt-3">
                    <div class="form-group col-md-3">
                        <div class="mb-3">
                            <input type="text" required placeholder="Votre nom" asp-for="Nom" class="form-control"/>
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="email" required placeholder="Votre email" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="tel" placeholder="Numéro de téléphone" asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="mb-3">
                            <input type="text" required placeholder="Objet" asp-for="Objet" class="form-control" />
                            <span asp-validation-for="Objet" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <textarea required placeholder="Message" asp-for="Message" class="form-control champMessage"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </fieldset>

            <div class="mt-3">
                <div class="col-md-5">
                    <input type="submit" value="Envoyer" class="btn boutonFormulaire" style="width: 23vw;" />
                </div>
            </div>
        </form> 
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }