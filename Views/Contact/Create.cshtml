@model MvcAEI.Models.Contact

@{
    ViewData["Title"] = "Formulaire de contact";
}
<div class="backContact">
    <div class="titreContact">
        <h2><span style="color:white">Nous </span>contacter</h2>
        <hr class="hrBlanc">
    </div>
    <div class="formulaireContact">
        <form asp-action="Create">
            <fieldset class="fieldset-style p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row d-flex justify-content-center mt-3">
                    <div class="form-group col-md-3">
                        <div class="mb-3">
                            <input type="text" placeholder="Votre nom" asp-for="Nom" class="form-control"/>
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="email" placeholder="Votre email" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input type="tel" placeholder="Numéro de téléphone" asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="mb-3">
                            <input type="text" placeholder="Objet" asp-for="Objet" class="form-control" />
                            <span asp-validation-for="Objet" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <textarea placeholder="Message" asp-for="Message" class="form-control champMessage"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </fieldset>

            <div class="mt-3">
                <div class="col-md-5">
                    <input type="submit" value="Envoyer" class="btn boutonFormulaire" style="width: 23vw;" />
                </div>
            </div>
        </form> 

        <div class="detailsContact">
            <p class="detailsContactTitre">Détails de contacts</p>
            <p class="descriptionDetailsContact">Les locaux d’AEI sont situés au sein de l’ENSEIRB-MATMECA</p>

            <div class="d-flex contacts">
                <div class="col-md-6">
                    <p class="detailsContactInformations">1 Avenue du Dr Albert Schweitzer, 33400 Talence</p>
                    <p>Téléphone : 05.56.04.42.15</p>
                </div>
                <div class="col-md-6">
                    <p class="detailsContactInformations">Contact : contact@junior-aei.com</p>
                    <p>Association Loi 1901 – Junior Entreprise</p>
                </div>
            </div>

        </div>
        <div class="d-flex justify-content-center">
            <a href="https://www.facebook.com/JuniorAEI/?locale2=fr_FR&paipv=0&eav=Afa_Sxr641Vl7wUA_pyoTwuDQvLvwyEndk8c1FpMVxx-boZgJnxp84IRXaBm4_748tI&_rdr" class="boutonReseauSocial" role="button" aria-pressed="true"><i class="bi bi-facebook"></i></a>
            <a href="https://www.linkedin.com/in/junioraei/?originalSubdomain=fr" class="boutonReseauSocial" role="button" aria-pressed="true"><i class="bi bi-linkedin"></i></a>  
            <a href="https://www.instagram.com/junioraei/?hl=fr" class="boutonReseauSocial" role="button" aria-pressed="true"><i class="bi bi-instagram"></i></a> 
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }