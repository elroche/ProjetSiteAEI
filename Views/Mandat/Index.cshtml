@model IEnumerable<MvcAEI.Models.Mandat>
@{
    ViewData["Title"] = "Les mandats";
}

<h2 class="mb-5">TEST</h2>

<div class="container pt-4">
    <form asp-controller="Mandat" asp-action="Index">
        <p> Séléctionnez le mandat que vous souhaitez afficher :
            <select class=" mb-3 px-5 py-1" name="id">
                @foreach (var mandat in (IEnumerable<Mandat>)ViewData["mandats"])
                {
                    <option value="@mandat.Id">@mandat.Annee</option>
                }
            </select>
            <input type="submit" class="btn btn-dark" value="Recherche" />
        </p>
    </form>
</div>

<div class="container pt-4">
    <div class="row justify-content">
        @if (Model.Count() > 0)
        {
        foreach (var item in Model)
        {
            var membres = @Html.DisplayFor(modelItem => item.Membres);
            //foreach(var membre in membres)
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Membres), @Html.DisplayFor(modelItem => item.Membres)</h5>
        }
        }
    </div>
</div>