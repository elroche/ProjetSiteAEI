@model IEnumerable<MvcAEI.Models.Article>
@{
    ViewData["Title"] = "Les Actualités";
}

<div class="backActualitésAdmin">
    <!-- Affichage d'un message de succès s'il est présent dans TempData -->    
    @if (@TempData["messageSuccess"] != null)
    {
            <div class="alert alert-success" role="alert">
            @TempData["messageSuccess"]
            </div>
    }

    <div class="titrePageActualites">
        <!-- Titre de la page -->
        <h2>Actualités</h2>
        <!-- Ligne de séparation -->
        <hr class="hrNoirTitreActualités">
    </div>
    <!-- Bouton pour ajouter un nouvel article -->
    <a class="btn btn-dark ml-5 mb-5" asp-controller="Article" asp-action="Creer"><i class="bi bi-plus-circle"></i> Ajouter un
        article</a>
    <div class="px-4">
        <div class="row">
            <!-- Vérification si des articles sont présents -->
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <div class="unArticlePageActualites" style="margin-bottom:6em;">
                        <!-- Image de l'actualité -->
                        <img class="imagesArticlePageActualites" alt="image de l'actualité" src=@Html.DisplayFor(modelItem => item.Image)></img>
                        <div class="descriptionArticlePageActualites">
                            <div style="margin-bottom: 0;">
                                <!-- Titre de l'article -->
                                <p class="titreArticlePageActualites">@Html.DisplayFor(modelItem => item.Titre)</p>
                                <!-- Description de l'article -->
                                <p class="">@Html.DisplayFor(modelItem => item.Description)</p>
                                <div class="d-flex justify-content-center">
                                    <!-- Lien "Lire la suite" redirigeant vers les détails de l'article -->
                                    <a asp-action="Details" asp-route-id="@item.Id" class="lireLaSuite" role="button" aria-pressed="true">Lire la suite</a>
                                </div>
                                <!-- Liens pour modifier et supprimer l'article -->
                                <a asp-action="Modifier" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-1" style="font-size: 1vw;" >Modifier</a>
                                <a asp-action="Supprimer" asp-route-id="@item.Id" class="btn btn-danger btn-sm mb-1"  style="font-size: 1vw;">Supprimer</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>