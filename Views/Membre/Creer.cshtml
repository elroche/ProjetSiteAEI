@model MvcAEI.Models.Membre

@{
    ViewData["Title"] = "Ajouter un membre";
}
<div class="backMembreCreer">
    <!-- Titre de la page-->
    <h1 class="mb-4" style="color:#0C2764; text-align:center; font-weight:bold;">Ajouter un membre</h1>
    <!-- Formulaire de création d'un membre -->
    <form asp-action="Creer">
        <fieldset class="p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Champ pour le nom -->
            <div class="form-group row justify-content-center py-2">
                <label asp-for="Nom" class="control-label" style="text-align: center;"></label>
                <div class="col-sm-6">
                    <input asp-for="Nom" class="form-control" />
                    <span asp-validation-for="Nom" class="text-danger"></span>
                </div>
            </div>
            <!-- Champ pour le prénom -->
            <div class="form-group row justify-content-center py-2">
                <label asp-for="Prenom" class="control-label" style="text-align: center;"></label>
                <div class="col-sm-6">
                    <input asp-for="Prenom" class="form-control" />
                    <span asp-validation-for="Prenom" class="text-danger"></span>
                </div>
            </div>
            <!-- Champ pour la photo -->
            <div class="form-group row justify-content-center py-2">
                <label asp-for="Photo" class="control-label" style="text-align: center;"></label>
                <div class="col-sm-6">
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>
            <!-- Champ pour le mot -->
            <div class="form-group row justify-content-center py-2">
                <label asp-for="Mot" class="control-label" style="text-align: center;"></label>
                <div class="col-sm-6">
                    <textarea asp-for="Mot" class="form-control" name="Mot" cols="40" rows="5"></textarea>
                    <span asp-validation-for="Mot" class="text-danger"></span>
                </div>
            </div>
            <!-- Champ pour le mandat -->
            <div class="form-group row justify-content-center py-2">
                <label asp-for="Mandat" class="control-label" style="text-align: center;"></label>
                <div class="col-sm-6">
                    <!-- Liste de séléction du mandat -->
                    <select asp-for="MandatId" class="form-control" asp-items="ViewBag.MandatId"></select>
                    <span asp-validation-for="MandatId" class="text-danger"></span>
                </div>
            </div>
            <!-- Champ pour le pôle -->
            <div class="form-group row justify-content-center py-2">
                <label asp-for="Pole" class="control-label" style="text-align: center;"></label>
                <div class="col-sm-6">
                    <!-- Liste de séléction du pôle -->
                    <select class="form-control" name="Pole">
                        @foreach (var pole in (string[])ViewData["poles"])
                        {
                            <option asp-for="Pole" value="@pole">@pole</option>
                        }
                    </select>
                    <span asp-validation-for="Pole" class="text-danger"></span>
                </div>
            </div>
            <!-- Champ pour le rôle -->
            <div class="form-group row justify-content-center py-2">
                <label asp-for="Role" class="control-label" style="text-align: center;"></label>
                <div class="col-sm-6">
                    <!-- Liste de séléction du rôle -->
                    <select class="form-control" name="Role">
                        @foreach (var role in (string[])ViewData["roles"])
                        {
                            <option asp-for="Role" value="@role">@role</option>
                        }

                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>
        </fieldset>
        <!-- Bouton de création du membre-->
        <div class="form-group text-center mt-4">
            <input type="submit" value="Ajouter" class="btn btn-primary" />
        </div>
    </form>
    <div class="mt-5 pt-5 ml-5">
        <!-- Bouton pour revenir à la page précédente-->
        <a class="text-decoration-none" asp-action="IndexAdmin"><i
            class="bi bi-arrow-left-circle-fill"></i> Retour à
            la page précédente</a>
    </div>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
