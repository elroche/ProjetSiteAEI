@model IEnumerable<MvcAEI.Models.Paragraphe>
@{
    ViewData["Title"] = "Les Paragraphes";
}

<div class="backParagrapheIndex">

    @if (@TempData["messageSuccess"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["messageSuccess"]
        </div>
    }

    <a class="btn btn-dark mt-3 ml-5" asp-controller="Paragraphe" asp-action="Creer"><i class="bi bi-plus-circle"></i> Ajouter un
        paragraphe</a>
    <div class="titrePageActualites" style="color:#0C2764;">
        <h1 class="mb-4" style="color:#0C2764; text-align:center; font-weight:bold;">Paragraphes</h1>
        <hr class="hrNoirTitreActualités">
    </div>
    <div class="px-4">
        <div class="row">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <div style="text-align: center; margin-bottom:3em;">
                        <div style="margin-bottom: 0;">
                            <p style="font-size: 1.7em; font-weight:bold; color:#0C2764;">Titre de l'article : @Html.DisplayFor(modelItem => item.Article.Titre)</p>
                            @if(item.Titre!=null)
                            {
                                <p style="font-size: 1.3em; font-weight:bold; color:#258cfb;">Titre du paragraphe : @Html.DisplayFor(modelItem => item.Titre)</p>
                            }
                            else 
                            {
                                <p style="font-size: 1.3em; font-weight:bold; color:#258cfb;">Ce paragraphe n'a pas de titre</p>
                            }
                            <p style="text-align: justify; white-space: pre-wrap;">@Html.DisplayFor(modelItem => item.Texte)</p>
                            <div style="margin: auto;">
                                <a asp-action="Modifier" asp-route-id="@item.Id" class="btn btn-primary btn-sm mb-1 ml-1 mr-1">Modifier</a>
                                <a asp-action="Supprimer" asp-route-id="@item.Id" class="btn btn-danger btn-sm mb-1 ml-1 mr-1">Supprimer</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>